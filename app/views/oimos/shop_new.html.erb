<div class="shopnew">
  <h1>新規のおいも</h1>
  <h3>SHOP</h3>

 <div class="link">
    <%= link_to "トップページ", oimos_top_path, class:"btn btn-malformation btn-malformation--pastel" %>
    <%= link_to 'shop投稿一覧', oimos_path, class:"btn btn-malformation btn-malformation--pastel" %>
    <%= link_to 'recipe投稿一覧', potatos_path, class:"btn btn-malformation btn-malformation--pastel" %>
    <%= link_to "recipe新規投稿ページ", new_potato_path, class:"btn btn-malformation btn-malformation--pastel" %>
    <%= form_with(model: @oimo, url: oimos_path, local: true) do |f| %>
 </div>

    <div class="form">

      <div class="field">
        <%= f.label :shop_or_recipe  %>
        <%= f.select :shop_or_recipe, 
        [["お店", "お店"], 
        ["料理", "料理"], 
        ["その他", "その他"]], include_blank: "選択して下さい" %>
      </div>

      <div class="name">
        <%= f.label :shop_name %>
        <%= f.text_field :shop_name, :size => 30 %>
      </div>

      <div class="adress">
        <%= f.label :adresses  %>
        <%= f.number_field :adresses, :size => 10 %>
      </div>

      <div class="about">
        <%= f.label :shop_about  %>
        <%= f.text_area :shop_about, :size => "30x2" %>
      </div>

    

      <div class="shopimage">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>

      <p>半角スペースを入力することで複数のタグを付けることができます。</p>
      <%= f.text_field :tag_name, placeholder: "Ruby Python Java" %>
      <%= f.submit "投稿する" %>
      <% end %>
    </div>

  <%= link_to "一覧に戻る", oimos_path %>
</div>

    


